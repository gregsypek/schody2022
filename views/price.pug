extends base 

mixin howCard(title, svgPath, info)
  .how__card 
    svg(class="icon" version="1.1" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 32 32")
      title= title 
      path(d= svgPath) 
    p.info= info

block content 
  main 
    section#price.price 
      .price__top.top.padding--big.container.mb--md 
        h2.heading-secondary Nasza oferta <span>cenowa</span>
        h3.price__description.description Na cenę schodów ma wpływ wiele czynników, dlatego każde schody są wyceniane indywidualnie. Zanim ustalimy dokładną cenę musimy ustalić          gatunek drewna, rodzaj balustrady, rodzaj wykończenia oraz dodatki. Poniżej przedstawiamy przykładowe ceny wyjściowe dla wykonanych schodów.
      .price__bottom.container--big 
        each item in price
          .price__row.row--1
            .price__col.col--1 
              .price__box 
                img(src=`/images/price/${item.imageCover}` alt=`${item.title}` class="price__photo")
                p.price__title= item.title
            .price__col.col--2 
              .price__card 
                p.price__card-heading Cena netto 
                .price__card-box 
                  sup od 
                  span.price__card-value= item.price
                  sub zł
            .price__col.col--3  
              .price__lists 
                .price__list 
                  header Cena obejmuje
                    ul.price__includes 
                      each element in item.priceIncluded 
                        li= element                      
                .price__list
                  if item.additionals.length > 0   
                    header Opcje dodatkowe 
                      ul.price__addition 
                        each e in item.additionals 
                          li= e                
                      
    .section.how.container.padding--huge 
